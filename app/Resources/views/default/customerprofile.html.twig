                            <h4>Customer Profile :</h4>
                        </div>
                        <div class="forms">
                            <h3 class="title1"></h3>
                            <div class="form-three widget-shadow">
                                <form class="form-horizontal" action="customerprofile" method="post">
                                    <div class="form-group">
                                        <label class="col-sm-2 control-label">Activity Type</label>
                                        <div class="col-sm-8">
                                            <select  class="form-control1" name="activity_type" required>
                                                <option value="">Please Select Activity</option>
                                                <option value="1">Happened</option>
                                                <option value="2">Scheduled</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-sm-12" >
                                        <button class="btn btn-default w3ls-button" style="margin-left: 40%;">Submit</button>
                                    </div>
                                </form>
                            </div>
                        </div>


                        <div class="w3l-table-info">
                            <table id="table">
                                {% if ActivityType == 1 %}
                                    <thead>
                                    <tr>
                                        <th>User</th>
                                        <th>Customer</th>
                                        <th>Activity Type</th>
                                        <th>Time</th>
                                        <th>Description</th>
                                        <th>Next Activity</th>
                                        <th>Next Activity Time</th>
                                    </tr>
                                    </thead>
                                    <tbody>

                                    {%   for activity in ActivityData %}
                                        <tr>
                                            <td>{{ activity.userName }}</td>
                                            <td>{{ activity.customerName }}</td>
                                            <td>{{ activity.ActivityType }}</td>
                                            <td>{{ activity.Time|date }}</td>
                                            <td>{{ activity.Description }}</td>
                                            <td>{{ activity.NextActivityDescription }}</td>
                                            <td>{{ activity.NextActivityTime|date }}</td>
                                        </tr>
                                    {% endfor %}




                                    </tbody>
                                {% endif %}

                                {% if ActivityType == 2 %}
                                    <thead>
                                    <tr>
                                        <th>User</th>
                                        <th>Customer</th>
                                        <th>Scheduled Activity Time</th>
                                        <th>Scheduled Activity</th>
                                        <th>Activity Type</th>
                                        <th>Previous Activity Time</th>
                                        <th>Previous Activity Description</th>


                                    </tr>
                                    </thead>
